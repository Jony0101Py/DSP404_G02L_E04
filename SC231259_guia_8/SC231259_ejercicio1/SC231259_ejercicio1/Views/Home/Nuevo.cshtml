@model SC231259_ejercicio1.Models.Datos

@{
    ViewBag.Title = "Bolsa de Trabajo en Línea";
}

<h2>Nueva oferta de trabajo</h2>
@using (Html.BeginForm("Ingresardatos", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Ingrese la información en los campos siguientes para adicionar una nueva oferta de trabajo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Categoría -->
        <div class="form-group">
            @Html.Label("Categoría", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OpcionesCat", ViewBag.OpcionesCat as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sNombreCategoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Título de la Oferta -->
        <div class="form-group">
            @Html.Label("Título de la Oferta", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sTituloOferta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sTituloOferta, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Tipo de Contrato -->
        <div class="form-group">
            @Html.Label("Tipo de Contrato", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoC", ViewBag.TipoC as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nTipoContrato, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Tipo de Jornada -->
        <div class="form-group">
            @Html.Label("Tipo de Jornada", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoJ", ViewBag.TipoJ as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nTipoJornada, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Tipo de Localidad -->
        <div class="form-group">
            @Html.Label("Tipo de Localidad", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoL", ViewBag.TipoL as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nTipoLocalidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Salario -->
        <div class="form-group">
            @Html.Label("Salario", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fSalario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fSalario, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Fecha de Publicación -->
        <div class="form-group">
            @Html.Label("Fecha de Publicación", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dFechaPublicacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dFechaPublicacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Empresa -->
        <div class="form-group">
            @Html.Label("Empresa", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OpcionesEmp", ViewBag.OpcionesEmp as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sNombreEmpresa, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Fecha de Contratación -->
        <div class="form-group">
            @Html.Label("Fecha de Contratación", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dFechaContratacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dFechaContratacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Número de Vacantes -->
        <div class="form-group">
            @Html.Label("Número de Vacantes", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nVacantes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nVacantes, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Localidades -->
        <div class="form-group">
            @Html.Label("Localidades", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OpcionesLoc", ViewBag.OpcionesLoc as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nTipoLocalidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Descripción -->
        <div class="form-group">
            @Html.Label("Descripción", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sDescripcion, new { htmlAttributes = new { @class = "form-control", @cols = 80, @rows = 50 } })
                @Html.ValidationMessageFor(model => model.sDescripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botón para Ingresar -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-lg btn-primary">
                    Ingresar
                </button>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Ver Lista de Ofertas", "Index")
</div>
