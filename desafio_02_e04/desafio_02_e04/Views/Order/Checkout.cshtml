@model List<desafio_02_e04.Models.CarritoItem>

@{
    ViewBag.Title = "Checkout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    body {
        background-image: url('/Content/fondo_TemperTrap.png');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #f77f00;
        margin-bottom: 30px;
        font-weight: bold;
    }

    table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
        background-color: rgba(255, 165, 0, 0.1);
    }

    th, td {
        text-align: center;
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

    thead {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    tfoot {
        font-weight: bold;
        background-color: #f8f9fa;
    }

    .form-inline {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        width: 100%;
    }

    .form-control {
        width: 100%;
        max-width: 400px;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #f77f00;
        border-color: #f77f00;
        color: white;
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 4px;
        width: 100%;
        text-align: center;
        margin-top: 15px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #d65a00;
            border-color: #d65a00;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 4px;
        width: 100%;
        text-align: center;
        margin-top: 10px;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .total-section {
        text-align: right;
        margin-top: 20px;
    }

        .total-section .total-text {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .total-section .total-amount {
            font-size: 1.5rem;
            font-weight: bold;
            color: #f77f00;
        }

    .icon {
        color: #f77f00;
        margin-right: 8px;
    }

        .icon:hover {
            color: #d65a00;
        }
</style>

<div class="container">
    <h2><i class="fas fa-shopping-cart icon"></i> Checkout</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Plato</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombrePlato</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Precio.ToString("C")</td>
                    <td>@(item.Cantidad * item.Precio)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total:</td>
                <td>@Model.Sum(x => x.Cantidad * x.Precio).ToString("C")</td>
            </tr>
        </tfoot>
    </table>

    <form method="post" action="@Url.Action("ProcessCheckout", "Order")" class="form-inline">
        <div class="form-group">
            <h6>Selecciona el Método de Pago</h6>
            <label for="metodoPago" class="sr-only">Método de Pago</label>
            <select id="metodoPago" name="metodoPago" class="form-control" required>
                <option value="">Seleccione un método</option>
                <option value="Tarjeta">Tarjeta</option>
                <option value="Efectivo">Efectivo</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-check icon"></i> Confirmar Pedido</button>
    </form>

    <a href="@Url.Action("Menus", "Carrito")" class="btn btn-secondary"><i class="fas fa-arrow-left icon"></i> Volver al Carrito</a>
</div>
